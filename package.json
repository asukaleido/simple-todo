{
  "name": "simple-todo",
  "version": "1.0.0",
  "description": "simple-todo with node.js and angular2",
  "scripts": {
    "rimraf": "rimraf",
    "tslint": "tslint",
    "remap-istanbul": "remap-istanbul",
    "clean": "npm cache clean && npm run rimraf -- node_modules typings static/ts/typings",
    "preclean:install": "npm run clean",
    "clean:install": "npm install",
    "install:typings": "typings install && cd static/ts && typings install",
    "postinstall": "npm run install:typings && npm run server:build && npm run build:prod",
    "watch": "npm run watch:dev",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:prod": "npm run build:prod -- --watch",
    "watch:test": "npm run test -- --auto-watch --no-single-run",
    "build": "npm run build:dev",
    "prebuild:dev": "npm run rimraf static/ts/dist",
    "build:dev": "webpack --config static/ts/config/webpack.dev.js --progress --profile --colors --display-error-details --display-cached",
    "prebuild:prod": "npm run rimraf static/ts/dist",
    "build:prod": "webpack --config static/ts/config/webpack.prod.js  --progress --profile --colors --display-error-details --display-cached --bail",
    "server:build-typescript": "tsc --project ./",
    "preserver:build": "npm run rimraf -- dist",
    "server:build": "npm run server:build-typescript",
    "preserver": "npm run server:build",
    "server": "node dist/main.js",
    "start": "npm run server",
    "lint": "npm run tslint 'static/ts/src/**/*.ts'",
    "pretest": "npm run lint && npm run rimraf -- coverage",
    "test": "node --max-old-space-size=4096 node_modules/karma/bin/karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asukaleido/simple-todo.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/asukaleido/simple-todo/issues"
  },
  "dependencies": {
    "angular2": "^2.0.0-beta.15",
    "compass-mixins": "^0.12.7",
    "core-js": "^2.2.2",
    "es6-shim": "^0.35.0",
    "express": "^4.13.4",
    "hammerjs": "^2.0.8",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine-core": "^2.4.1",
    "json-loader": "^0.5.4",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-coverage": "^0.5.5",
    "karma-jasmine": "^0.3.8",
    "karma-mocha-reporter": "^2.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "node-sass": "3.4.2",
    "phantomjs-prebuilt": "^2.1.7",
    "pug": "^2.0.0-alpha6",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "0.1.2",
    "remap-istanbul": "^0.6.3",
    "rimraf": "^2.5.2",
    "rxjs": "5.0.0-beta.6",
    "sass-loader": "^3.2.0",
    "source-map-loader": "^0.1.5",
    "ts-loader": "^0.8.2",
    "tslint": "^3.8.1",
    "tslint-loader": "^2.1.4",
    "typescript": "^1.8.10",
    "typings": "^0.8.1",
    "webpack": "^1.13.0",
    "webpack-merge": "^0.12.0",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "karma-coveralls": "^1.1.2"
  }
}
